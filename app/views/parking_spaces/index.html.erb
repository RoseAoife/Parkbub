<h1>Parking Spaces</h1>

<table style="table-layout: fixed; width: 100%;">
  <thead align="left">
    <tr>
      <th>Posted by</th>
      <th>Title</th>
      <th>Address</th>
      <th>Price/hr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parking_spaces.each do |parking_space| %>
      <tr>
        <td><%= User.find(parking_space.user_id).username %></td>
        <td><%= parking_space.name %></td>
        <td><%= parking_space.address %></td>
        <td>â‚¬<%= parking_space.cost %></td>
        <td><%= link_to 'Details', parking_space %></td>
        <% if current_user.id == parking_space.user_id %>
          <td><%= link_to 'Edit', edit_parking_space_path(parking_space) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

