<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Posted by</th>
      <th>Title</th>
      <th>Address</th>
      <th>Price/hr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.posted_by %></td>
        <td><%= post.title %></td>
        <td><%= post.address %></td>
        <td>â‚¬<%= post.cost %></td>
        <td><%= link_to 'Details', post %></td>
        <% if current_user.email == post.email %>
          <td><%= link_to 'Edit', edit_parking_space_path(post) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

