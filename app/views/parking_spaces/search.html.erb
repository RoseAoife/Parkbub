<h1>Search</h1>

<p>Searching for: <%= @search_term %></p>

<table style="table-layout: fixed; width: 100%;">
  <thead align="left">
    <tr>
      <th>Posted by</th>
      <th>Title</th>
      <th>Address</th>
      <th>Price/hr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @results.each do |result| %>  
  <tbody>
    <tr>
      <td><%= User.find(result.user_id).username %></td>
      <td><%= result.name %></td>
      <td><%= result.address %></td>
      <td>â‚¬<%= result.cost %></td>
      <td><%= link_to 'Details', result %></td>
      <% if current_user.id == result.user_id %>
          <td><%= link_to 'Edit', edit_parking_space_path(result) %></td>
      <% end %>
    </tr>
  </tbody>
  <% end %>
</table>